<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/c_info_rec_item_tv_Department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@+id/c_info_rec_item_tv_Department"
            android:id="@+id/c_info_rec_item_tv_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/c_info_rec_item_tv_FlgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_info_rec_item_tv_Info"
            android:layout_alignRight="@+id/c_info_rec_item_tv_Info"
            android:layout_margin="16dp"
            android:tooltipText="加入"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>